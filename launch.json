{
    "version": "0.2.0",
    "configurations": [
        // ============================================================================
        // TYPESCRIPT/NODE.JS DEBUGGING
        // ============================================================================
        {
            "name": "TypeScript: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "args": ["${relativeFile}"],
            "runtimeArgs": ["-r", "ts-node/register"],
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Node.js: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "outputCapture": "std",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            }
        },

        // ============================================================================
        // NEXT.JS DEBUGGING
        // ============================================================================
        {
            "name": "Next.js: Debug Server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ]
        },
        {
            "name": "Next.js: Debug Client-side",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        },
        {
            "name": "Next.js: Debug Full Stack",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "serverReadyAction": {
                "pattern": "- Local:.+(https?://.+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            }
        },

        // ============================================================================
        // PYTHON DEBUGGING
        // ============================================================================
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "justMyCode": false
        },
        {
            "name": "FastAPI: Development Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src",
                "ENVIRONMENT": "development"
            },
            "justMyCode": false
        },

        // ============================================================================
        // PYTHON TESTING
        // ============================================================================
        {
            "name": "Pytest: Current File (Verbose)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--tb=short",
                "${file}"
            ],
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest: Current File (Show Output)",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-s",
                "-v",
                "${file}"
            ],
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "cwd": "${fileDirname}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest: All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-v",
                "--tb=short"
            ],
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "justMyCode": false
        },
        {
            "name": "Pytest: Failed Tests Only",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "--lf",
                "-v"
            ],
            // "console": "integratedTerminal",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "redirectOutput": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/src"
            },
            "justMyCode": false
        }
    ],
    "compounds": [
        // ============================================================================
        // COMPOUND CONFIGURATIONS
        // ============================================================================
        {
            "name": "Full Stack: Frontend + Backend",
            "configurations": [
                "Node.js: Current File",
                "FastAPI: Development Server"
            ],
            "stopAll": true
        }
    ]
}